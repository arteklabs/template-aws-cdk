{
  "include": [
    "lib/**/*.ts",
    "bin/**/*.ts",
    "test/*.ts"
  ],
  "exclude": [],
  "compilerOptions": {
      "types": [
        "jest"
      ],
      "target": "es2017",
      "module": "CommonJS",
      "sourceMap": true,
      "strict": true,
      "strictNullChecks": true,
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "removeComments": true,
      "strictPropertyInitialization": false,
      "outDir": "dist",
      "esModuleInterop": true,
      "resolveJsonModule": true
  }
}